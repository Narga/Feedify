{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "rules": {
    "no-use-before-define": ["warn"],
    "no-return-assign": ["off"],
    "no-plusplus": ["off"],
    "semi": ["error", "never"],
    "max-len": ["warn", 120],
    "quote-props": ["warn"],
    "class-methods-use-this": ["warn"],
    "no-underscore-dangle": ["warn"],
    "import/no-extraneous-dependencies": ["off"],
    "import/prefer-default-export": ["off"]
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "settings": {
    "import/resolve": {
      "moduleDirectory": ["node_modules"]
    }
  }
}
